{
  "preset": "node-style-guide",
  // allow some slop to account for legacy code
  "validateQuoteMarks": { "mark": "'", "escape": true },
  "requireCapitalizedComments": { "allExcept": ["jshint"] },
  "requireCurlyBraces": [
    "if",
    "else",
    "for",
    "while",
    "do",
    "try",
    "catch"
  ],

  "excludeFiles": [
    "node_modules/**",
    "clean/**"
  ]
}
